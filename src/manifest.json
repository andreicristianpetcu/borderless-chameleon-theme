{
  "name": "Borderless Chameleon Theme",
  "description": "Inspiration from Chameleon Dynamic Theme by Lin Onetwo and Huy Tran which is a fork of. It adds the extra colors from the Borderless White and Borderless Dark themes.",
  "homepage_url": "https://github.com/andreicristianpetcu/browser-adaptation-dynamic-theme",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "theme"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
       "page": "options.html",
       "browser_style": true
  },
  "version": "1.8",
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["body.js"]
      }
  ],
  "applications": {
    "gecko": {
      "strict_min_version": "55.0a2"
    }
  }
}
